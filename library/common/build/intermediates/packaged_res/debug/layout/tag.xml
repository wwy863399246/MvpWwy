<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingEnd="@dimen/x40"
              android:id="@+id/ll_tag"
              android:orientation="horizontal">

    <com.app.common.commonwidget.roundview.RoundTextView
        android:id="@+id/tv_tag"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/x6"
        android:paddingEnd="@dimen/x12"
        android:paddingStart="@dimen/x12"
        android:paddingTop="@dimen/x6"
        android:text="精华"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textColor="#50A3F1"
        android:textSize="12sp"
        app:rv_backgroundColor="@color/FFFFFF"
        app:rv_cornerRadius="@dimen/x4"
        app:rv_strokeColor="#50A3F1"
        app:rv_strokeWidth="0.5dp">

    </com.app.common.commonwidget.roundview.RoundTextView>
</LinearLayout>